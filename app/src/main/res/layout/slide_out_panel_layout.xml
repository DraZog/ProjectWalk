<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- SIDE PANEL-->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="#EFEFEF"
        android:id="@+id/layoutWrapper"
        android:paddingLeft="10dp"
        android:elevation="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Country #1"
            android:layout_weight="1"
            android:textSize="30dp"/>

        <ListView
            android:id="@+id/countryOption1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:smoothScrollbar="true"
            android:scrollingCache="false"
            android:animationCache="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Country #2"
            android:textSize="30dp"/>

        <ListView
            android:id="@+id/countryOption2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:smoothScrollbar="true"
            android:scrollingCache="false"
            android:animationCache="false"/>

    </LinearLayout>

    <Button
        android:id="@+id/panelSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide"
        android:layout_alignLeft="@id/layoutWrapper"
        android:layout_alignTop="@id/layoutWrapper"
        android:layout_marginLeft="-82dp"
        android:elevation="50dp"/>

</RelativeLayout>



