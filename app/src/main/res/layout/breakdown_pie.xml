<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/breakdownMissingOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/missingdata"
                android:layout_margin="50dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="20dp"
                android:visibility="invisible">

            </com.github.mikephil.charting.charts.PieChart>

        </RelativeLayout>

        <TextView
            android:id="@+id/breakdownTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Energy Source Breakdown"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="#FFFFFF"/>


        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/breakdownMissingTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/missingdata"
                android:layout_margin="50dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="20dp"
                android:visibility="invisible">

            </com.github.mikephil.charting.charts.PieChart>

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>