<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/breakdownYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2010"
            android:textSize="45sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@id/breakdownYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"
            android:gravity="center"
            android:textSize="16sp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/breakdownMissingOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/missingdata" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="20dp"
                android:visibility="invisible">

            </com.github.mikephil.charting.charts.PieChart>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/breakdownMissingTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/missingdata" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="20dp"
                android:visibility="invisible">

            </com.github.mikephil.charting.charts.PieChart>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <SeekBar
            android:id="@+id/breakdownSeekBar"
            android:layout_width="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>