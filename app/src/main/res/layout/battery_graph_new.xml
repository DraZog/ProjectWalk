<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:text="% Of Total Energy Consumed That Is Renewable"-->
        <!--android:layout_weight="2"-->
        <!--android:textSize="18sp"-->
        <!--android:gravity="center"-->
        <!--android:textStyle="bold"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="15">

        <!-- BATTERY FRAGMENT 1-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/countryOneBattery"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/battery0"/>
            <TextView
                android:id="@id/countryOneName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp" />
        </LinearLayout>

        <!-- CENTER DETAIL VIEW -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/currentYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2010"
                    android:textSize="75sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_below="@id/currentYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:gravity="center"
                    android:textSize="30sp"/>

            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

                <!-- COUNTRY ONE BATTERY DETAILS-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/countryOnePercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical|right"
                            android:textColor="@android:color/holo_red_light"/>
                        <TextView
                            android:layout_below="@id/countryOnePercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:text="Renewable Energy Use" />


                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/countryOneTotalEnergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical|right"
                            android:textColor="@android:color/holo_blue_light"/>
                        <TextView
                            android:layout_below="@id/countryOneTotalEnergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:text="Total Energy Use (TJ)"/>

                    </RelativeLayout>



                </LinearLayout>

                <!-- COUNTRY TWO BATTERY DETAILS-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/countryTwoPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical|left"
                            android:textColor="@android:color/holo_red_light"/>
                        <TextView
                            android:layout_below="@id/countryTwoPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="Renewable Energy Use" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/countryTwoTotalEnergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical|left"
                            android:textColor="@android:color/holo_blue_light"/>
                        <TextView
                            android:layout_below="@id/countryTwoTotalEnergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="Total Energy Use (TJ)"/>

                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>
            <SeekBar
                android:id="@+id/batteryYearSeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>

        </LinearLayout>

        <!-- BATTERY FRAGMENT 1-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/countryTwoBattery"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/battery0"/>
            <TextView
                android:id="@+id/countryOneName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>




